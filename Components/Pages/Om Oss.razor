@page "/OmOss"

<PageTitle>WEbbLIE - Om Oss</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-4">
    <MudText Typo="Typo.h3" GutterBottom="true">Om Oss</MudText>
    <MudPaper Elevation="3" Class="p-4">
        <MudText Typo="Typo.body1">
            Välkommen till WEbbLIE! Vi är ett passionerat team av utvecklare och designers
            som brinner för att skapa moderna och användarvänliga webbapplikationer.
        </MudText>
        <MudText Typo="Typo.body1" Class="mt-2">
            Vårt mål är att leverera högkvalitativa lösningar som gör skillnad för våra kunder.
            Vi tror på innovation, samarbete och en kundcentrerad utvecklingsprocess.
        </MudText>
    </MudPaper>

    <MudGrid Container Class="mt-4">
    <MudItem Xs="12">
        <MudCard>
           <MudImage Src="/images/bild1.jpg" Alt="Kristoffer" Height="200" />
            <MudCardContent>
                <MudText Typo="Typo.h5">Kristoffer Linder</MudText>
                <MudText Typo="Typo.h6">Scrum Master</MudText>
                <MudText Typo="Typo.body2">"Jag älskar att skapa dynamiska och responsiva webbsidor! Jag pratar tyska också."</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem Xs="12">
        <MudCard>
            <MudImage Src="/images/bild2.jpg" Alt="Daniel" Height="200" />
            <MudCardContent>
                <MudText Typo="Typo.h5">Daniel Johansson</MudText>
                <MudText Typo="Typo.h6">Projektledare</MudText>
                <MudText Typo="Typo.body2">"Jag är ju numera Japansk medborgare. Jag kan koda också."</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem Xs="12">
        <MudCard>
            <MudImage Src="/images/bild3.jpg" Alt="Arvin" Height="200" />
            <MudCardContent>
                <MudText Typo="Typo.h5">Arvin Hedin</MudText>
                <MudText Typo="Typo.h6">Backend-specialist</MudText>
                <MudText Typo="Typo.body2">"Förutom att fixa kod så har jag dessutom fixat lägenhet. Jag är fan bäst!"</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem Xs="12">
        <MudCard>
            <MudImage Src="/images/bild4.jpg" Alt="Magnus" Height="200" />
            <MudCardContent>
                <MudText Typo="Typo.h5">Magnus Söderholm</MudText>
                <MudText Typo="Typo.h6">Frontend-expert</MudText>
                <MudText Typo="Typo.body2">"Jag vill också åka till Japan..."</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

</MudContainer>
